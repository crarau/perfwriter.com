---
import { Icon } from 'astro-icon/components';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const {
  title = 'Join the Waiting List',
  subtitle = 'Be the first to know when we launch!',
  tagline = '',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
  />
  <div class="flex flex-col max-w-xs mx-auto">
    <form action="https://formspree.io/f/xblreqjq" method="POST" class="mb-4">
      <div class="mb-4">
        <input
          type="email"
          placeholder="Enter your email"
          name="email"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-slate-800 dark:border-gray-700 dark:text-white"
          required
        />
      </div>
      <button
        type="submit"
        class="w-full px-6 py-3 text-white bg-primary hover:bg-blue-600 rounded-md transition duration-300"
      >
        Join Waiting List
      </button>
    </form>
    <p class="text-center text-gray-600 dark:text-gray-400 text-sm">
      We'll keep you updated on our progress and notify you when we launch.
    </p>
  </div>
</WidgetWrapper>
