---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AI Performance Review Assistant',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#',
        icon: 'tabler:rocket',
      },
      { text: 'Learn More', href: '#features' },
    ]}
    image={{ src: '~/assets/images/ai-review.png', alt: 'AI Performance Review' }}
  >
    <Fragment slot="title">
      Enhance Your Performance Reviews with <span class="text-accent dark:text-white highlight">AI-Powered Insights</span>
    </Fragment>

    <Fragment slot="subtitle">
      Our AI Performance Review Assistant analyzes your GitHub contributions to provide comprehensive insights, helping you prepare for your quarterly, bi-annual, and annual reviews.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Key Features"
    title="Empowering Your Performance Reviews"
    subtitle="Our AI-powered platform utilizes multiple agents to analyze and highlight your contributions, ensuring you're well-prepared for your next review."
    items={[
      {
        title: 'Comprehensive Analysis',
        description: 'Analyze commits, pull requests, and code changes across multiple repositories to provide a holistic view of your contributions.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Intelligent Insights',
        description: 'AI agents extract meaningful patterns and highlight significant achievements from your GitHub activity.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Customizable Reports',
        description: 'Generate tailored reports for different review periods - quarterly, bi-annual, or annual.',
        icon: 'tabler:report',
      },
      {
        title: 'Skill Mapping',
        description: 'Map your contributions to technical skill criteria, helping you track your professional growth.',
        icon: 'tabler:certificate',
      },
    ]}
  />
  
  <!-- Content Widget **************** -->

  <Content
    tagline="Comprehensive Analysis"
    title="Multi-Level Insights"
    items={[
      {
        title: 'Basic Analysis',
        description: 'Analyze individual diffs and files, distinguishing between simple and complex changes.',
      },
      {
        title: 'Intermediate Insights',
        description: 'Understand non-authoring behaviors like reviewing, commenting, and suggesting. Evaluate the impact of your contributions.',
      },
      {
        title: 'Advanced Context',
        description: 'Ingest multiple streams of data, including repository history, issue trackers, and communication tools for a complete picture.',
      },
      {
        title: 'Deep Understanding',
        description: 'Comprehend multiple repos, modules, and even entire codebases to provide context-rich insights.',
      },
      {
        title: 'Skill Mapping',
        description: 'Align your contributions with career matrices to track your progress against technical skill criteria.',
      },
    ]}
    image={{
      src: '~/assets/images/ai-analysis.png',
      alt: 'AI Analysis Levels',
    }}
  >
    <Fragment slot="content">
      From basic code changes to deep contextual understanding
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How It Works"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Connect Your GitHub</span>',
        description: 'Link your GitHub account to our platform.',
        icon: 'tabler:brand-github',
      },
      {
        title: 'Step 2: <span class="font-medium">Select Review Period</span>',
        description: 'Choose the timeframe for analysis - quarterly, bi-annual, or annual.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Step 3: <span class="font-medium">AI Analysis</span>',
        description: 'Our AI agents analyze your contributions and extract meaningful insights.',
        icon: 'tabler:robot',
      },
      {
        title: 'Step 4: <span class="font-medium">Generate Report</span>',
        description: 'Receive a comprehensive report highlighting your key contributions and achievements.',
        icon: 'tabler:file-report',
      },
      {
        title: 'Step 5: <span class="font-medium">Review and Prepare</span>',
        description: 'Use the insights to prepare for your performance review with confidence.',
        icon: 'tabler:presentation',
      },
    ]}
    image={{
      src: '~/assets/images/workflow.png',
      alt: 'AI Review Assistant Workflow',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Find quick answers to common questions about our AI Performance Review Assistant."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How does the AI analyze my contributions?',
        description: 'Our AI uses advanced natural language processing and machine learning algorithms to analyze your GitHub activity, including commits, pull requests, and code changes. It extracts meaningful patterns and highlights significant achievements.',
      },
      {
        title: 'Can I customize the analysis period?',
        description: 'Yes, you can select different timeframes for analysis, including quarterly, bi-annual, and annual periods. This flexibility allows you to prepare for various types of performance reviews.',
      },
      {
        title: 'How does skill mapping work?',
        description: 'Our platform maps your contributions to technical skill criteria based on industry-standard career matrices. This helps you track your progress and identify areas for growth.',
      },
      {
        title: 'Is my GitHub data secure?',
        description: 'We take data security seriously. Our platform uses read-only access to your GitHub data and does not store any sensitive information. All analysis is performed in real-time and reports are generated on-demand.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Enhance Your Performance Reviews?
    </Fragment>

    <Fragment slot="subtitle">
      Join the hundreds of developers already using our AI Performance Review Assistant to showcase their contributions and accelerate their careers.
    </Fragment>
  </CallToAction>
</Layout>